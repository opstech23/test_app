<p id="notice"><%= notice %></p>

<h1>Project Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task title</th>
      <th>Task description</th>
      <th>Project</th>
      <th>User</th>
      <th>Approved by admin</th>
      <th>Approved by pto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_tasks.each do |project_task| %>
      <tr>
        <td><%= project_task.task_title %></td>
        <td><%= project_task.task_description %></td>
        <td><%= project_task.project %></td>
        <td><%= project_task.user %></td>
        <td><%= project_task.approved_by_admin %></td>
        <td><%= project_task.approved_by_pto %></td>
        <td><%= link_to 'Show', project_task %></td>
        <td><%= link_to 'Edit', edit_project_task_path(project_task) %></td>
        <td><%= link_to 'Destroy', project_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

